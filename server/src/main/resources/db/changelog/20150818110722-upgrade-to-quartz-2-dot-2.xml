<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <property name="trigger.table_name" value="qrtz_fired_triggers" dbms="postgresql"/>
    <property name="trigger.table_name" value="QRTZ_FIRED_TRIGGERS" dbms="mysql"/>
    <property name="trigger.table_name" value="qrtz_fired_triggers" dbms="oracle"/>

    <property name="schedtime.type" value="BIGINT" dbms="postgresql"/>
    <property name="schedtime.type" value="BIGINT(13)" dbms="mysql"/>
    <property name="schedtime.type" value="NUMBER(13)" dbms="oracle"/>

    <changeSet id="20150818110722-1" author="dgoodwin">
        <comment>upgrade to quartz 2.2</comment>
        <addColumn tableName="${trigger.table_name}">
            <column name="sched_time" type="${schedtime.type}">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>

</databaseChangeLog>
